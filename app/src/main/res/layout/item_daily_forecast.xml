<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvItemForecast"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/medium_margin"
    android:layout_marginTop="@dimen/standard_margin"
    android:layout_marginEnd="@dimen/medium_margin"
    android:layout_marginBottom="@dimen/standard_margin"
    app:cardCornerRadius="@dimen/cardView_corner_radius"
    app:cardElevation="@dimen/cardView_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/standard_padding">

        <TextView
            android:id="@+id/tvDayOfWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/standard_margin"
            android:textSize="@dimen/standard_text_size" />

        <ImageView
            android:id="@+id/icDailyForecastWeather"
            android:layout_width="@dimen/icon_weather_medium_size"
            android:layout_height="@dimen/icon_weather_medium_size"
            android:layout_marginStart="@dimen/large_margin" />

        <TextView
            android:id="@+id/tvDailyForecastTempDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/standard_margin"
            android:textSize="@dimen/standard_text_size" />

        <TextView
            android:id="@+id/tvDailyForecastTempNight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/standard_text_size" />

    </LinearLayout>
</androidx.cardview.widget.CardView>