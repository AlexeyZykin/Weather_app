<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvPlaceItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/medium_margin"
    android:layout_marginTop="@dimen/standard_margin"
    android:layout_marginEnd="@dimen/medium_margin"
    android:layout_marginBottom="@dimen/standard_margin"
    android:outlineProvider="none"
    app:cardBackgroundColor="@color/semi_transparent"
    app:cardCornerRadius="@dimen/cardView_corner_radius"
    app:cardElevation="@dimen/cardView_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPlaceCityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/large_margin"
            android:layout_marginTop="@dimen/medium_margin"
            android:layout_marginBottom="@dimen/medium_margin"
            android:textSize="@dimen/title_text_size" />

        <ImageView
            android:id="@+id/icIsCurrent"
            android:layout_width="@dimen/icon_medium_size"
            android:layout_height="@dimen/icon_medium_size"
            android:src="@drawable/ic_current_location"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_marginEnd="@dimen/medium_margin"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/isSelected"
        android:layout_width="@dimen/place_target_marker_width"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@drawable/place_target_marker_background"
        android:orientation="horizontal"
        android:visibility="gone" />
</androidx.cardview.widget.CardView>