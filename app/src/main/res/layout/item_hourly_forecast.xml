<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/standard_margin"
    app:cardCornerRadius="@dimen/cardView_large_corner_radius"
    app:cardElevation="@dimen/cardView_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/large_padding">

        <TextView
            android:id="@+id/tvHourlyForecastTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/standard_text_size" />

        <ImageView
            android:id="@+id/icHourlyForecastWeather"
            android:layout_width="@dimen/icon_weather_size"
            android:layout_height="@dimen/icon_weather_size"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/tvHourlyForecastTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/standard_text_size" />
    </LinearLayout>


</androidx.cardview.widget.CardView>