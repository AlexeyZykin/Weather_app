<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/weatherFragment">

    <fragment
        android:id="@+id/weatherFragment"
        android:name="com.example.weather_app.presentation.features.home.WeatherFragment"
        tools:layout="@layout/fragment_weather">
        <action
            android:id="@+id/action_weatherFragment_to_hourlyForecastDetailsFragment"
            app:destination="@id/hourlyForecastDetailsFragment" />
        <action
            android:id="@+id/action_weatherFragment_to_dailyForecastDetailsFragment"
            app:destination="@id/dailyForecastDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/hourlyForecastDetailsFragment"
        android:name="com.example.weather_app.presentation.features.details.HourlyForecastDetailsFragment"
        tools:layout="@layout/fragment_hourly_forecast_details">
        <argument
            android:name="dt"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/dailyForecastDetailsFragment"
        android:name="com.example.weather_app.presentation.features.details.DailyForecastDetailsFragment"
        tools:layout="@layout/fragment_daily_forecast_details">
        <argument
            android:name="dtTxt"
            app:argType="string" />
    </fragment>
</navigation>